<header class="restaurant-img" style="background-image: url({{restaurant.image}});">
    <h1 class="restaurant-name"><p>{{restaurant.name}}</p>
    <a href="/restaurants/{{restaurant.id}}/delete"><i class="far fa-trash-alt"></i></a>
    <a href="/restaurants/{{restaurant.id}}/edit"><i class="far fa-edit"></i></a>
    </h1>
</header>
<section>   
    {{#each menus}}
        <div class="menu-card">
            <main>
                <h2 class="menu-title" style="display: inline;">{{this.title}}</h2>&nbsp;
                <a href="/restaurants/{{this.RestaurantId}}/menus/{{this.id}}/edit">✏️</a>
                <a href="/restaurants/{{this.RestaurantId}}/menus/{{this.id}}/delete">❌</a>
                <dl>
                    <br>
                    {{#each items}}
                        <div class="items">
                            <dt>{{this.name}}
                                <a style="color: #252764;"href="/restaurants/{{../../restaurant.id}}/menus/{{this.MenuId}}/items/{{this.id}}/edit">✎</a>
                                <a href="/restaurants/{{../../restaurant.id}}/menus/{{this.MenuId}}/items/{{this.id}}/delete">✖️</a>
                            </dt>
                            <dd>{{this.price}}</dd>
                        </div>
                    {{/each}}
                    &nbsp;&nbsp;<a href="/restaurants/{{this.RestaurantId}}/menus/{{this.id}}/items">➕</a>
                </dl>
            </main>
        </div>
    {{/each}}
    <div class="menu-card">
        <main>
            <form action="/restaurants/{{restaurant.id}}/menus" method="POST">
                <h3 class="menu-title">New<br>menu:</h3>
                <label>Menu Title:</label>
                <input name="title" type="text" required>
            <button type="submit">Add Menu</button>
        </form>
        </main>
    </div>
</section>